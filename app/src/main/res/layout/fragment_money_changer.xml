<?xml version="1.0" encoding="utf-8"?>
<layout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable
            name="numberOfP1000"
            type="String" />
        <variable
            name="numberOfP500"
            type="String" />
        <variable
            name="numberOfP200"
            type="String" />
        <variable
            name="numberOfP100"
            type="String" />
        <variable
            name="numberOfP50"
            type="String" />
        <variable
            name="numberOfP20"
            type="String" />

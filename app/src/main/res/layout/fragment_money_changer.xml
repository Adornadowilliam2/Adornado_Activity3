            android:layout_marginTop="29dp"
            android:layout_marginEnd="106dp"
            android:text="@string/number_of_p20"
            app:layout_constraintEnd_toStartOf="@+id/ResultNum20"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextNum50" />

        <TextView
            android:id="@+id/TextNum10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="106dp"
            android:text="@string/number_of_p10"
            app:layout_constraintEnd_toStartOf="@+id/ResultNum10"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextNum20" />

        <TextView
            android:id="@+id/TextNum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="118dp"
            android:text="@string/number_of_p1"
            app:layout_constraintEnd_toStartOf="@+id/ResultNum1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextNum5" />

<!--   Result Content     -->

        <TextView
            android:id="@+id/ResultNum1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="62dp"
